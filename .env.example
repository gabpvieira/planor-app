# ============================================
# PLANOR - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# DATABASE (Local development only)
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/planor

# ============================================
# SERVER
# ============================================
NODE_ENV=development
PORT=5000
SESSION_SECRET=your-super-secret-session-key-min-32-chars

# Timezone (America/Sao_Paulo = UTC-3 Bras√≠lia)
TZ=America/Sao_Paulo

# ============================================
# SUPABASE (Required)
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Public keys (safe for client-side)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Server-side only (NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# OPENAI (Required for Smart Statement Import)
# ============================================
OPENAI_API_KEY=your-openai-api-key

# ============================================
# VERCEL DEPLOYMENT
# ============================================
# These are set automatically in Vercel Dashboard:
# - VITE_SUPABASE_URL
# - VITE_SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_ROLE_KEY
# - SESSION_SECRET
